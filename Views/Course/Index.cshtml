@model IEnumerable<Candidate>

@if(Model.Count()>0)
{
    <h6 class="display-6">
        Applications
    </h6>

    <table class="table table-hover table-striped">

        <thead>
            <Tr>
                <th>Email</th>
                <th>Name</th>
                <th>LastName</th>
                <th>Aplly At</th>
                <th>Course
                </th>   
            </Tr>

        </thead>
        <tbody>
                @foreach (Candidate candidate in Model)
                {
                    <Tr>
                        
                        <td>@candidate.Email</td>
                        <td>@candidate.FirstName</td>
                        <td>@candidate.LastName</td>
                        <td>@candidate.ApplyAt</td>
                        <td>@candidate.SelectedCourse</td>
                    </Tr>
                
                }
        </tbody>
    </table>



}
else
{
 <div class="alert alert-info">

        There is no application. Please click here to apply
        <a class="alert-link" asp-action="Apply">Apply</a>

 </div>
}
