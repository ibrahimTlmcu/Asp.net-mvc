<div class="display - 6 ">

    Apply

</div>

<hr>

<form method="post" asp-action="Apply">
    <div class="form-group">
        <label>Email</label>
        <input name=" Email" class="form-control">
    </div>  

    <div class="form-group  my-2">
        <label>FirstName</label>
        <input name=" FirstName" class="form-control">
    </div>      
        

    <div class="form-group my-2">
        <label>LastName</label>
        <input name=" LastName" class="form-control">
    </div>  

    <div class="form-group my-2">
        <label>Age</label>
        <select name="Age">
            <option value="18">18</option>
            <option value="19">19</option>
            <option value="20">20</option>
            <option value="21">21</option>
            <option value="22">22</option>
        </select>
    </div>

    <fieldset>
        <legend>Select One Course </legend>
        <P>
            <input id="mvc" type="radio" name="SelectedCourse" value="Asp.netCoursemvc" />
            <label>ASP.NET Core MVC</label>

        </P>
        <P>
            <input id="api" type="radio" name="SelectedCourse" value="Asp.netCourseapi" />
            <label>ASP.NET Core API</label>
        </P>
        <P>
            <input id="blazor" type="radio" name="SelectedCourse" value="Blazor" />
            <label>Blazor</label>
        </P>



    </fieldset>

    <div >
        <button class="btn  btn-primary" type="submit"> Gonder</button>
        <a class="btn btn-warning" href="/">Home</a>

    </div>



</form>